{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["@hapi/hapi", "node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["node_modules/@types", "src", "types", "hapi-auth.d.ts"],
  "exclude": ["node_modules", "dist"]
}
